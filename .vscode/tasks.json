{
  "tasks": [
    {
      "type": "shell",
      "label": "build c++14",
      "command": "/usr/bin/g++",
      "args": [
        "-std=gnu++1y",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ],
  "version": "2.0.0"
}